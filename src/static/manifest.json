{
  "name": "JobFit",
  "description": "Fit your CV to a job post requirements.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Weather Extension",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab",
    "tabs",
    "commands"
  ],
  "commands": {
    "save_job_post": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save Job Post"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ]
}